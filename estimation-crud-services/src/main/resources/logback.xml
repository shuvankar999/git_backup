<?xml version="1.0" encoding="UTF-8"?>

<configuration>

	<springProfile name="LOCAL">
		<property name="LOCAL_HOME" value="c:/TIP/estimation-crud-service/logs" />

		<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
			<layout class="ch.qos.logback.classic.PatternLayout">
				<Pattern>
					%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
				</Pattern>
			</layout>
		</appender>
		<appender name="FILE-AUDIT"
			class="ch.qos.logback.core.rolling.RollingFileAppender">
			<file>${LOCAL_HOME}/debug.log</file>
			<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
				<Pattern>
					%d{yyyy-MM-dd HH:mm:ss} - %msg%n
				</Pattern>
			</encoder>

			<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
				<!-- rollover daily -->
				<fileNamePattern>${LOCAL_HOME}/archived/debug.%d{yyyy-MM-dd}.%i.log
				</fileNamePattern>
				<timeBasedFileNamingAndTriggeringPolicy
					class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
					<maxFileSize>10MB</maxFileSize>
				</timeBasedFileNamingAndTriggeringPolicy>
			</rollingPolicy>

		</appender>

		<logger name="com.tip" level="debug" additivity="false">
			<appender-ref ref="FILE-AUDIT" />
			<appender-ref ref="STDOUT" />
		</logger>

		<root level="error">
			<appender-ref ref="FILE-AUDIT" />
			<appender-ref ref="STDOUT" />
		</root>
	</springProfile>
		<springProfile name="dev">
		<property name="DEV_HOME" value="/opt2/shared/apps/matrixApps/estimation-crud-service-logs" />

		<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
			<layout class="ch.qos.logback.classic.PatternLayout">
				<Pattern>
					%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
				</Pattern>
			</layout>
		</appender>
		<appender name="FILE-AUDIT"
			class="ch.qos.logback.core.rolling.RollingFileAppender">
			<file>${DEV_HOME}/debug.log</file>
			<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
				<Pattern>
					%d{yyyy-MM-dd HH:mm:ss} - %msg%n
				</Pattern>
			</encoder>

			<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
				<!-- rollover daily -->
				<fileNamePattern>${DEV_HOME}/archived/debug.%d{yyyy-MM-dd}.%i.log
				</fileNamePattern>
				<timeBasedFileNamingAndTriggeringPolicy
					class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
					<maxFileSize>10MB</maxFileSize>
				</timeBasedFileNamingAndTriggeringPolicy>
			</rollingPolicy>

		</appender>

		<logger name="com.tip" level="debug" additivity="false">
			<appender-ref ref="FILE-AUDIT" />
			<appender-ref ref="STDOUT" />
		</logger>

		<root level="error">
			<appender-ref ref="FILE-AUDIT" />
			<appender-ref ref="STDOUT" />
		</root>
	</springProfile>
</configuration>